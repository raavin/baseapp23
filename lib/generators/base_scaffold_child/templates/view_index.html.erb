<%%= content_for :header, "Listing <%= plural_name %>" %>
<%% content_for :sidebar do %>
  <ul class="sidebar_menu">
    <li><%%= link_to 'New <%= singular_name %>', new_<%= controller_singular_name %>_<%= singular_name %>_path(@<%= controller_singular_name %>) %></li>
  </ul>
<%% end -%>

<table class="index">
  <tr>
<% for attribute in attributes -%>
    <th><%%= <%= class_name %>.human_attribute_name('<%= attribute.name %>') %></th>
<% end -%>
    <th>&nbsp;</th>
  </tr>
<%% for <%= singular_name %> in @<%= plural_name %> %>
  <tr>
<% for attribute in attributes -%>
    <td><%%=h <%= singular_name %>.<%= attribute.name %> %></td>
<% end -%>
    <td class="actions">
      <%%= link_to 'Show', <%= controller_singular_name %>_<%= singular_name %>_path(@<%= controller_singular_name %>, <%= singular_name %>) %> |
      <%%= link_to 'Edit', edit_<%= controller_singular_name %>_<%= singular_name %>_path(@<%= controller_singular_name %>, <%= singular_name %>) %> |
      <%%= link_to 'Destroy', <%= controller_singular_name %>_<%= singular_name %>_path(@<%= controller_singular_name %>, <%= singular_name %>) %>
    </td>
  </tr>
<%% end %>
</table>
<%%= will_paginate @<%= plural_name %> %>

